{
  "description": "Create an NGINX Plus LB and two NGINX Plus web servers",
  "variables": {
    "home": "{{env `HOME`}}",
    "license": "{{env `HOME`}}/.ssh/ngx-certs",
    "project_id": "all-active-nginx-plus-lb",
    "zone": "us-west1-a"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `home`}}/.gcloud/gcloud_credentials.json",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu",
      "name": "ngx-lb",
      "image_name": "ngx-plus-lb"
    },
    {
      "type": "googlecompute",
      "account_file": "{{user `home`}}/.gcloud/gcloud_credentials.json",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu",
      "name": "ngx-app-1",
      "image_name": "ngx-oss-app-1"
    },
    {
      "type": "googlecompute",
      "account_file": "{{user `home`}}/.gcloud/gcloud_credentials.json",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu",
      "name": "ngx-app-2",
      "image_name": "ngx-oss-app-2"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{user `license`}}",
      "destination": "~/.ssh/ngx-certs"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 60",
        "sudo apt update",
        "sudo apt install python-pip -y",
        "sudo pip install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "galaxy_file": "requirements.yml",
      "playbook_file": "playbook-lb.yml",
      "only": [
        "ngx-lb"
      ]
    },
    {
      "type": "ansible-local",
      "galaxy_file": "requirements.yml",
      "playbook_file": "playbook-app.yml",
      "only": [
        "ngx-app-1",
        "ngx-app-2"
      ]
    },
    {
      "type": "file",
      "source": "./conf/lb",
      "destination": "~/conf",
      "only": [
        "ngx-lb"
      ]
    },
    {
      "type": "file",
      "source": "./conf/app",
      "destination": "~/conf",
      "only": [
        "ngx-app-1",
        "ngx-app-2"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv ~/conf/* /etc/nginx/conf.d",
        "sudo rm -rf ~/conf"
      ]
    },
    {
      "type": "file",
      "source":"./html",
      "destination": "~",
      "only": [
        "ngx-app-1",
        "ngx-app-2"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv ~/html /usr/share/nginx",
        "sudo rm -rf ~/html"
      ],
      "only": [
        "ngx-app-1",
        "ngx-app-2"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "if [ -f /etc/nginx/conf.d/default.conf ]; then sudo mv /etc/nginx/conf.d/default.conf /etc/nginx/conf.d/default.conf.bak; fi;",
        "sudo nginx -s reload"
      ],
      "only": [
        "ngx-lb"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /etc/nginx/sites-available",
        "sudo nginx -s reload"
      ],
      "only": [
        "ngx-app-1",
        "ngx-app-2"
      ]
    }
  ]
}
